@model  IEnumerable<NetCoreMVCLab03.Models.Home>
@{
    ViewData["Title"] = "Create";
}
<h2>Thêm mới</h2>
<form action="" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Tên</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Tên" />
    </div>
    <div class="form-group">
        <label asp-for="AuthorId">Tác giả</label>
        <select asp-for="AuthorId" class="form-control" asp-items="@ViewBag.authors">
            <option value="">Chọn tác giả</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="GenreId">Thể loại</label>
        <select asp-for="GenreId" class="form-control" asp-items="@ViewBag.authors">
            <option value="">Chọn thể loại</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Price">Gía</label>
        <input type="text" class="form-control" asp-for="Price" placeholder="Gía" />
    </div>
    <div class="form-group">
        <label asp-for="TotalPage">Tổng số</label>
        <input type="text" class="form-control" asp-for="TotalPage" placeholder="Tổng số" />
    </div>
    <div class="form-group">
        <label asp-for="Image">Hình ảnh/Poster</label>
        <input type="text" class="form-control" asp-for="Image">
    </div>
    <div class="form-group">
        <label asp-for="Sumary">Gioi thiệu ngắn</label>
        <textarea class="form-control" asp-for="Sumary" placeholder="Nội dung giới thiệu..."></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
</form>