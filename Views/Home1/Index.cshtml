@model  IEnumerable<NetCoreMVCLab03.Models.Home>
    @{
        ViewData["Title"] = "Index";
    }
<h2>Danh sách</h2>
<form action=""method="POST" class="form-inline" role="form">
    <div class="form-group">
        <select name="AuthorId" class="form-control" asp-items="@ViewBag.authors">
            <option value="">Chọn thể loại</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary"> Tìm kiếm</button>
    <a asp-action="Create" class="btn btn-danger">Thêm mới</a>
</form>
<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu đề</th>
            <th>Nhà sản xuất</th>
            <th>Thể loại</th>
            <th>Gía</th>
            <th>Hình ảnh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Home in model)
            {
                <tr>
                    <td>@Home.Id</td>
                    <td>@Home.Title</td>
                    <td>@Home.AuthorId</td>
                    <td>@Home.GenreId</td>
                    <td>@Home.Price</td>
                    <td>
                        <ìmg src="@book.Image" alt="@Home.Title" width="40"/>
                    </td>

                    <td>
                        <a asp-action="Edit" class="btn tbn-sm btn-primary">Sửa</a>
                    </td>
                </tr>
            }
    </tbody>
</table>